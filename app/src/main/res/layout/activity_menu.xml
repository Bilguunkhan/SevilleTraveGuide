<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.aubg.myapplication.MenuActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/places"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="most popular Places"
        android:textSize="25dp"
        android:textAlignment="center"
        android:onClick="placesF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/videos"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Watch videos of our treasures"
        android:textSize="25dp"
        android:textAlignment="center"
        android:onClick="videosF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/googleMaps"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Explore with Google Maps"
        android:textSize="25dp"
        android:textAlignment="center"
        android:onClick="googleF"/>




</LinearLayout>
